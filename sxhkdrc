super + Return
	st -e zsh

super + Escape
	betterlockscreen -l blur

super + shift + Escape
	betterlockscreen -s blur

super + shift + d
	rofi -show drun -font "DejaVu 12" -show-icons

super + shift + c
	pkill -USR1 -x sxhkd

super + shift + e
	bspc quit

super + {_,shift +} q
	bspc node -{c,k}

super + m
	bspc desktop -l next

super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

XF86MonBrightnessUp
	xbacklight -inc 5

XF86MonBrightnessDown
	xbacklight -dec 5

XF86AudioLowerVolume
	pactl -- set-sink-volume $(pactl -- list sinks short | grep RUNNING | awk '\{print $1\}') -10% && notify-send -i /usr/share/icons/Papirus-Dark/16x16/actions/audio-volume-low.svg "$(pamixer --get-volume-human)"

XF86AudioRaiseVolume
	pactl -- set-sink-volume $(pactl -- list sinks short | grep RUNNING | awk '\{print $1\}') +10% && notify-send -i /usr/share/icons/Papirus-Dark/16x16/actions/audio-volume-high.svg "$(pamixer --get-volume-human)"

XF86AudioMute
	pactl set-sink-mute $(pactl -- list sinks short | grep RUNNING | awk '\{print $1\}') toggle && notify-send -i /usr/share/icons/Papirus-Dark/16x16/actions/audio-volume-$([ $(pamixer --get-volume-human) = "muted" ] && echo muted || echo high).svg "$(pamixer --get-volume-human)"

XF86AudioPlay
    dbus-send --type=method_call --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause

XF86AudioNext
    dbus-send --type=method_call --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next

XF86AudioPrev
    dbus-send --type=method_call --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous

XF86AudioStop
    dbus-send --type=method_call --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Stop

Print
	xfce4-screenshooter

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

super + b
    bspc config border_width $([ $(bspc config border_width) = 0 ] && echo 2 || echo 0 )

super + r
    bspc config top_padding $([ $(bspc config top_padding) = 0 ] && echo 20 || echo 0 ); polybar-msg cmd toggle
